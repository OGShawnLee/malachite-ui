{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"strict": true,
		"paths": {
			"$lib": ["src/lib/"],
			"$lib/*": ["src/lib/*"],
			"@components": ["src/lib/components"],
			"@components/*": ["src/lib/components/*"],
			"@core": ["src/lib/core"],
			"@core/*": ["src/lib/core/*"],
			"@hooks": ["src/lib/hooks"],
			"@hooks/*": ["src/lib/hooks/*"],
			"@predicate": ["src/lib/predicate"],
			"@predicate/*": ["src/lib/predicate/*"],
			"@stores": ["src/lib/stores"],
			"@stores/*": ["src/lib/stores/*"],
			"@test-utils": ["src/test-utils"],
			"@test-utils/*": ["src/test-utils/*"],
			"@utils": ["src/lib/utils"],
			"@utils/*": ["src/lib/utils/*"]
		}
	}
}
